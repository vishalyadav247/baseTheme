{% comment %} Renders a minimal product card (image, title, price, sku) Accepts:
- card_product: {Object} Product Liquid object - section_id: {String} Section ID
- lazy_load: {Boolean} Enable lazy loading for images {% endcomment %}

{% style  %} 
.product-card__image-wrapper {
  position:relative;
  display: block;
  height:100%
}
.product-card__image-wrapper .second-image {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
}
.product-card__image-wrapper:hover .second-image {
  opacity: 1;
}
 {% endstyle %}
<div class="flex flex-col justify-end">
  <div class="h-full">
    {% if card_product.featured_media %}
    <a href="{{ card_product.url }}" class="product-card__image-wrapper">
        {% if section.settings.hover_second_image and card_product.media.size > 1 %}<img
        src="{{ card_product.featured_media | img_url : '540x' }}"
        alt="{{ card_product.featured_media.alt | escape }}"
        loading="{% if lazy_load %}lazy{% else %}eager{% endif %}"
            class="first-image w-full"
      />
        <img
            src="{{ card_product.media[1] | img_url: '540x' }}"
            alt="{{ card_product.media[1].alt | escape }}"
            loading="{% if lazy_load %}lazy{% else %}eager{% endif %}"
            class="second-image w-full"
          />
          {% else %}
            <img
        src="{{ card_product.featured_media | img_url : '540x' }}"
        alt="{{ card_product.featured_media.alt | escape }}"
        loading="{% if lazy_load %}lazy{% else %}eager{% endif %}"
            class="w-full"
       
      />
        {% endif %}
    </a>
    {% endif %}
  </div>
  <div class="arun">
    <h3>
      <a href="{{ card_product.url }}" >
        {{ card_product.title }}
      </a>
    </h3>
    <div>
      <div class="flex" style="gap: 8px">
        {% if card_product.compare_at_price > card_product.price %}
        <p style="text-decoration: line-through">
          {{ card_product.compare_at_price | money }}
        </p>
        {% endif %} {% if card_product.price %}
        <p>{{ card_product.price | money }}</p>
        {% endif %}
      </div>

      {% if card_product.selected_or_first_available_variant.sku != blank %}
      <p>SKU: {{ card_product.selected_or_first_available_variant.sku }}</p>
      {% endif %}
    </div>
  </div>
</div>
